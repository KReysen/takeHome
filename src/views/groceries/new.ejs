<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <% include ../static/partials/messages.ejs %>
      <h2>Create new Grocery</h2>
      <form class="create-form" action="/lists/<%= listId %>/groceries/create" method="post">
        <div class="form-group">
          <label for="name">Grocery name</label>
          <input type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="enter new grocery name">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <textarea rows="1" class="form-control" name="price" placeholder="Enter 0 if unknown"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>