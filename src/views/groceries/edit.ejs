<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <h1>Edit Grocery</h1>

      <form action="/lists/<%= grocery.listId %>/groceries/<%= grocery.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Grocery name</label>
          <input value="<%= grocery.name %>" type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter name">
        </div>
        <div class="form-group">
          <label for="price">Grocery price</label>
          <textarea rows="1" class="form-control" name="price" placeholder="Enter price"><%= grocery.price %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>