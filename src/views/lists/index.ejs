<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>My Lists</h1>

      <% if(currentUser) { %>
        <a href="/lists/new">Create a new list</a>
     

      <ul class="list-group">

        <% lists.forEach((list) => { %>
          <% if(currentUser.id == list.userId) { %>
            <li class="list-group-item">
                <a href="/lists/<%= list.id %>"> <%= list.title %> </a>
              </li>
          <% } %>
          
        <% }) %>
      </ul>

      <% } else { %> 
        <p>Create an account to make lists!</p>
      <% } %>

    </main>
  </body>
</html>